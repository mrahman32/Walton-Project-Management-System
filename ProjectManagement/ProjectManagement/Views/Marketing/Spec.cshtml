@using System.Web.UI.WebControls
@model ProjectManagement.Models.MkProjectSpecModel
@{
    ViewBag.Title = "Spec";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/global/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<script src="~/assets/global/plugins/jquery-ui/jquery-ui.min.js"></script>

<script>
    $(document).ready(function () {
        //Brand
        $("#Brand").autocomplete({
            delay: 100,
            source: function (request, response) {
                var url = '@Url.Action("GetSpec", "Common")';
                $.post(url, { specname: request.term, type: 'brand' }, function (data) {
                    console.log(data);
                    response($.map(data, function (item) {
                        return { value: item.Brand };
                    }));
                });
            }
        });

        //Model
        $("#ModelName").autocomplete({
            delay: 100,
            source: function (request, response) {
                var url = '@Url.Action("GetSpec", "Common")';
                $.post(url, { specname: request.term, type: 'model' }, function (data) {
                    console.log(data);
                    response($.map(data, function (item) {
                        return { value: item.ModelName };
                    }));
                });
            }
        });

        //Dealer Comission

        $("#RP").change(function () {

            var rp = $('#RP').val();
            var dp = $('#DP').val();
            //debugger;
            var dealercomission = ((rp - dp) / dp) * 100;
            var str = dealercomission.toString();
            if (str.length > 6) str = str.substring(0, 6);
            var final = str + '%';
            $('#DealerComission').val(final);

        });

        //Retailer Comission
        $("#CP").change(function () {

            var rp = $('#RP').val();
            var cp = $('#CP').val();
            //debugger;
            var retailercomission = ((cp - rp) / rp) * 100;
            var str = retailercomission.toString();
            if (str.length > 6) str = str.substring(0, 6);
            var final = str + '%';
            $('#RetailerComission').val(final);

        });
    });

</script>

