@model IEnumerable<ProjectManagement.Models.ProjectImageModel>
@{
    ViewBag.Title = "ProjectImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">Project Images</div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered dtTable">
                    <thead>
                        <tr>
                            <th>Model</th>
                            <th>Order</th>
                            <th>Images</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>
                                    <span style="font-weight: bolder;font-size: 18px">@v.ProjectModel</span>
                                </td>
                                <td>@v.OrderNo</td>
                                <td>
                                    <a target="_blank" href="@v.ImagePath">
                                        <img class="thumbnail" src="@v.ImagePath" alt="image">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

